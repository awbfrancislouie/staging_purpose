<odoo>
    <record id="menu_module_issue_logs" model="ir.ui.menu">
        <field name="action" eval="False"/>
        <field name="active" eval="True"/>
        <field name="name">Issue Logs</field>
        <field name="sequence">10</field>
        <field name="web_icon">fa fa-spinner,#FFFFFF,#636DA9</field>
    </record>

    <record id="act_project_issue_logs" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="binding_view_types">list,form</field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="help"><![CDATA[<p class="o_view_nocontent_smiling_face">In this menu, you can log all the issue encountered in project implementation.</p>
                    ]]></field>
        <field name="limit">80</field>
        <field name="name">Issue Logs</field>
        <field name="res_model">project.issue.logs</field>
        <field name="search_view_id" eval="False"/>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="act_project_issue_type" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="binding_view_types">list,form</field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="help"><![CDATA[<p class="o_view_nocontent_smiling_face">
                            This is your new action ; by default, it contains a list view and a form view.
                        </p>
                        <p>
                            You can start customizing these screens by clicking on the Studio icon on the
                            top right corner (you can also customize this help message there).
                        </p>
                    ]]></field>
        <field name="limit">80</field>
        <field name="name">Issue Types</field>
        <field name="res_model">project.issue.type</field>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="act_project_issue_logs_view" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="binding_view_types">list,form</field>
        <field name="context">{'search_default_project_id': active_id,'default_project_id': active_id}</field>
        <field name="domain">[('project_id', '=', active_id)]</field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="limit">80</field>
        <field name="name">Issues</field>
        <field name="res_model">project.issue.logs</field>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_project_issue_logs_tree" model="ir.ui.view">
        <field name="name">project.issue.logs.tree</field>
        <field name="model">project.issue.logs</field>
        <field name="arch" type="xml">
            <tree string="Issue Logs">
                <field name="name"/>
                <field name="logged_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_project_issue_logs_form" model="ir.ui.view">
        <field name="name">project.issue.logs.form</field>
        <field name="model">project.issue.logs</field>
        <field name="arch" type="xml">
            <form>
                <header>
                  <field name="state" options="{'clickable': '1'}" widget="statusbar" string="Issue Status"/>
                </header>
                <sheet string="Issue Logs">
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id" string="Project" required="1" options="{'no_create':true}"/>
                            <field name="issue_type"/>
                        </group>
                        <group>
                            <field name="logged_date" string="Date Logged" required="1"/>
                            <field name="resolved_date" string="Date Resolved"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" string="Issue Description" nolabel="1"/>
                        </page>
                    </notebook>
               </sheet>
                <div class="oe_chatter" name="studio_div_d0dfe1">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_project_issue_type_form" model="ir.ui.view">
        <field name="name">project.issue.type.form</field>
        <field name="model">project.issue.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Issue Type">
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" placeholder="Name"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_project_issue_type_tree" model="ir.ui.view">
        <field name="name">project.issue.type.tree</field>
        <field name="model">project.issue.type</field>
        <field name="arch" type="xml">
            <tree string="Issue Type">
                <field name="name"/>
            </tree>
        </field>
    </record>

    
    <record id="open_issue_logs_window" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="binding_view_types">list,form</field>
        <field name="context">{}</field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="help"><![CDATA[<p class="o_view_nocontent_smiling_face">In this menu, you can log all the issue encountered in project implementation.</p>
                    ]]></field>
        <field name="limit">80</field>
        <field name="name">Issue Logs</field>
        <field name="res_model">project.issue.logs</field>
        <field name="search_view_id" eval="False"/>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    
    <record id="open_issue_types_window" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="binding_view_types">list,form</field>
        <field name="context">{}</field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="help"><![CDATA[<p class="o_view_nocontent_smiling_face">
                            This is your new action ; by default, it contains a list view and a form view.
                        </p>
                        <p>
                            You can start customizing these screens by clicking on the Studio icon on the
                            top right corner (you can also customize this help message there).
                        </p>
                    ]]></field>
        <field name="limit">80</field>
        <field name="name">Issue Types</field>
        <field name="res_model">project.issue.type</field>
        <field name="search_view_id" eval="False"/>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <record id="open_issue_logs_project" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="binding_view_types">list,form</field>
        <field name="context">{'search_default_project_id': active_id,'default_project_id': active_id}</field>
        <field name="domain">[('project_id', '=', active_id)]</field>
        <field name="filter" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="help" eval="False"/>
        <field name="limit">80</field>
        <field name="name">Issues</field>
        <field name="res_model">project.issue.logs</field>
        <field name="search_view_id" eval="False"/>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    
    <record id="menu_view_project_issue_logs" model="ir.ui.menu">
        <field name="action" ref="act_project_issue_logs"/>
        <field name="active" eval="True"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="name">Issue Logs</field>
        <field name="parent_id" ref="menu_module_issue_logs"/>
        <field name="sequence">10</field>
    </record>

    <record id="menu_view_project_issue_config" model="ir.ui.menu">
        <field name="action" ref="base.action_open_website"/>
        <field name="active" eval="True"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="name">Configurations</field>
        <field name="parent_id" ref="menu_module_issue_logs"/>
        <field name="sequence">10</field>
    </record>

    <record id="menu_view_project_issue_type" model="ir.ui.menu">
        <field name="action" ref="act_project_issue_type"/>
        <field name="active" eval="True"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="name">Issue Types</field>
        <field name="parent_id" ref="menu_view_project_issue_config"/>
    </record>
</odoo>