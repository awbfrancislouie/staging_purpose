<odoo>
    <data>
         <template id="assets_backend" name="petstore_assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/wegen_custom/static/src/js/progressbar.js"/>
            </xpath>
        </template>

        <record id="crm_lead_user_form_readonly" model="ir.ui.view">
            <field name="name">crm.lead.user.form.readonly</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form" />
            <field name="groups_id" eval="[(6, 0, [ref('sales_team.group_sale_salesman') ])]" />
            <field name="priority" eval="99"/>
            <field name="arch" type="xml">
                <field name="user_id" position="attributes">
                   <attribute name="attrs">{"readonly": [["id",">",0]]}</attribute>
                </field>
                <field name="team_id" position="attributes">
                   <attribute name="attrs">{"readonly": [["id",">",0]]}</attribute>
                </field>
            </field>
        </record>

        <record id="crm_lead_rsm_form_readonly" model="ir.ui.view">
            <field name="name">crm.lead.rsm.form.readonly</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form" />
            <field name="groups_id" eval="[(6, 0, [81])]" />
            <field name="priority" eval="99"/>
            <field name="arch" type="xml">
                <field name="user_id" position="attributes">
                    <attribute name="attrs">{"readonly": ["|",["sale_order_count",">",0],["quotation_count",">",0]]}</attribute>
                   <attribute name="domain">['|', ('sale_team_id', '=', team_id), ('id','=',user_id)]</attribute>
                </field>
                <field name="team_id" position="attributes">
                   <attribute name="readonly">1</attribute>
                </field>
            </field>
        </record>
        
        <record id="crm_lead_all_form" model="ir.ui.view">
            <field name="name">crm.lead.all.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form" />
            <field name="priority" eval="100"/>
            <field name="groups_id" eval="[(6, 0, [ref('sales_team.group_sale_salesman_all_leads') ])]" />
            <field name="arch" type="xml">
                <field name="user_id" position="attributes">
                    <attribute name="attrs">{"readonly": ["|",["sale_order_count",">",0],["quotation_count",">",0]]}</attribute>
                </field>
                <field name="team_id" position="attributes">
                    <attribute name="readonly">0</attribute>
                    <attribute name="attrs">{"readonly": ["|",["sale_order_count",">",0],["quotation_count",">",0]]}</attribute>
                </field>
            </field>
        </record>

        <record id="crm_lead_project_code_generate_form" model="ir.ui.view">
            <field name="name">crm.lead.project_code_generate.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header">
                    <button name="action_generate_project_code" string="Generate Project Code" type="object" class="oe_highlight" attrs="{'invisible': ['|', '|', ('type','!=','opportunity'), ('project_code', '!=', False), ('id', '=', False)]}"/>
                </xpath>
                <xpath expr="//div[@class='oe_title']//h2" position="after">
                    <field name="project_code" readonly="1" attrs="{'invisible': [('type', '=', 'lead')]}" force_save="1"/>
                </xpath>
            </field>
        </record>
        
        <record id="crm_lead_project_site_form" model="ir.ui.view">
            <field name="name">crm.lead.project_site.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="before">
                    <field name="site_location_id" attrs="{'readonly': [('project_code', '!=', False)], 'required': [('site_location_id_required', '=', True)]}"/>
                    <field name="site_location_id_required" invisible="1"/>
                </xpath>
                
                <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='phone']" position="after">
                    <field name="account_type" string="Account Type" options="{'no_create':true}" attrs="{'readonly': [['project_code','!=',False]], 'required': [['type','=','opportunity']]}" force_save="True"/>
                    <field name="property_type" string="Property Type" options="{'no_create':true}" attrs="{'required': [['type','=','opportunity']]}" />
                </xpath>
                
            </field>
        </record>

        <record id="crm_lead_project_code_generate_form_admin" model="ir.ui.view">
            <field name="name">crm.lead.project_code_generate.form.admin</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="groups_id" eval="[(4, ref('sales_team.group_sale_manager') )]" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_generate_project_code']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', '|', ('type','!=','opportunity'), ('id', '=', False)]}
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='site_location_id']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </xpath>
                
                <xpath expr="//field[@name='account_type']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </xpath>
                
            </field>
        </record>

        <record id="crm_lead_kanban_lead_kwp_unit" model="ir.ui.view">
            <field name="name">crm.lead.kanban.lead.kwp_unit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_kanban_view_leads" />
            <field name="arch" type="xml">
                <xpath expr="//kanban[1]//progressbar[1]" position="replace">
                    <field name="estimated_kwp"/>
                    <progressbar field="activity_state" colors="{&quot;planned&quot;: &quot;success&quot;, &quot;today&quot;: &quot;warning&quot;, &quot;overdue&quot;: &quot;danger&quot;}" sum_field="estimated_kwp" currency="kWp"  help="This bar allows to filter the opportunities based on scheduled activities."/>
                </xpath>
            </field>
        </record>

        <record id="crm_lead_kanban_opportunity_project_code" model="ir.ui.view">
            <field name="name">crm.lead.kanban.opportunity.project_code</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_kanban_view_leads" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='planned_revenue']" position="after">
                    <field name="estimated_kwp"/>
                </xpath>
                <xpath expr="//progressbar[@field='activity_state']" position="attributes">
                    <attritbute name="sum_field">estimated_kwp</attritbute>
                </xpath>
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="project_code"/>
                </xpath>
            </field>
        </record>

        <record id="crm_case_kanban_view_leads" model="ir.ui.view">
            <field name="name">crm.lead.kanban.lead.inherit.wegen_custom</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_kanban_view_leads" />
            <field name="arch" type="xml">
                <xpath expr="//kanban[1]" position="attributes">
                    <attribute name="quick_create">false</attribute>
                </xpath>
            </field>
        </record>

        <record id="crm_lead_tree_opportunity_project_code" model="ir.ui.view">
            <field name="name">crm.lead.tree.opportunity.project_code</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_oppor" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='country_id']" position="after">
                    <field name="project_code" optional="show" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record id="crm_lead_view_form" model="ir.ui.view">
            <field name="name">crm.lead.form.inherit.wegen_custom</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='planned_revenue']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='planned_revenue']" position="after">
                    <label for="estimated_kwp" string="Estimated kWp"/>
                    <field name="estimated_kwp" string="Estimated kWp"/>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/div[not(@name)][1]/h2[1]/div[2]/div[1]/field[@name='probability']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/field[@name='partner_name']" position="attributes">
                    <attribute name="attrs">{"required": [["type","=","lead"]]}</attribute>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/div[1]/field[@name='street']" position="attributes">
                    <attribute name="attrs">{"required": [["type","=","lead"]]}</attribute>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/div[1]/field[@name='city']" position="attributes">
                    <attribute name="attrs">{"required": [["type","=","lead"]]}</attribute>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/div[1]/field[@name='state_id']" position="attributes">
                    <attribute name="attrs">{"required": [["type","=","lead"]]}</attribute>
                    <attribute name="placeholder">Region</attribute>
                    <attribute name="string">Region</attribute>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/div[1]/field[@name='email_from']" position="attributes">
                    <attribute name="attrs">{"required": [["type","=","lead"]], "invisible": [["partner_address_email","!=",False]]}</attribute>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='phone']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/group[1]/group[3]/field[@name='phone']" position="attributes">
                    <attribute name="attrs">{"required": [["type","=","lead"]]}</attribute>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="attrs">{"readonly": [["quotation_count","&gt;=",1]]}</attribute>
                </xpath>
                <xpath expr="//field[@name='team_id']" position="attributes">
                    <attribute name="attrs">{"readonly": [["quotation_count","&gt;=",1]]}</attribute>
                </xpath>
                <xpath expr="//field[@name='lost_reason']" position="before">
                    <field name="company_id_1" string="Company" options="{'no_create':true}"/>
                    <xpath expr="//form[1]/sheet[1]/group[1]/group[not(@name)][6]/field[@name='company_id']" position="move"/>
                    <field name="set_default_company" string="Set Default Company" widget="boolean_toggle" attrs="{}" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='message_bounce']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='lead']" position="attributes">
                    <attribute name="string">Contact Details</attribute>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/group[1]/group[not(@name)][6]/field[@name='company_id']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_crm_case_opportunities_filter" model="ir.ui.view">
            <field name="name">crm.lead.search.opportunity.inherit.wegen_custom</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='company']" position="replace">
                    <filter context="{'group_by': 'company_id_1'}" name="studio_group_by_JnLzd" string="Company"/>
                </xpath>
                <xpath expr="//search[1]/group[1]/filter[@name='city']" position="after">
                    <filter context="{'group_by': 'state_id'}" name="studio_group_by_FgBKl" string="Region"/>
                </xpath>
            </field>
        </record>

        <record id="crm_case_tree_view_oppor" model="ir.ui.view">
            <field name="name">crm.lead.tree.opportunity.inherit.wegen_custom</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_oppor" />
            <field name="arch" type="xml">
                <xpath expr="//tree[1]/field[@name='probability']" position="replace"/>
                <xpath expr="//field[@name='planned_revenue']" position="replace">
                    <field name="estimated_kwp" sum="Sum of Estimated kWp"/>
                </xpath>
                <xpath expr="//field[@name='company_id'][not(ancestor::field)]" position="replace"/>
                <xpath expr="//field[@name='estimated_kwp'][not(ancestor::field)]" position="after">
                    <field name="company_id_1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>